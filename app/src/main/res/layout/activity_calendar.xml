<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aron.helloworld.CalendarActivity">

    <Button
        android:text="1"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:id="@+id/day1"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <Button
        android:text="2"
        android:id="@+id/day2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/day1"
        android:layout_toEndOf="@+id/day1" />

    <Button
        android:text="3"
        android:id="@+id/day3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/day2"
        android:layout_toEndOf="@+id/day2" />

    <Button
        android:text="4"
        android:id="@+id/day4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/day3"
        android:layout_toEndOf="@+id/day3"
        android:layout_alignBottom="@+id/day3" />

    <Button
        android:text="5"
        android:id="@+id/day5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/day4"
        android:layout_toEndOf="@+id/day4" />

    <Button
        android:text="6"
        android:id="@+id/day6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/day5"
        android:layout_toEndOf="@+id/day5" />

    <Button
        android:text="7"
        android:id="@+id/day7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/day6"
        android:layout_toEndOf="@+id/day6" />

    <TextView
        android:text="December"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toTopOf="@+id/day4"
        android:textSize="18sp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
